{
    "name": "hippophp/hippo",
    "description": "Hippo is an open-source tool that helps PHP programmers adhere to certain coding conventions",
    "type": "library",
    "keywords": ["checkstyle","standard","convention", "coding standards", "validator"],
    "homepage": "https://github.com/hippophp/hippo",
    "license": "MIT",
    "authors": [
        {
            "name": "James Brooks",
            "email": "jbrooksuk@me.com",
            "homepage": "http://james-brooks.uk",
            "role": "Developer"
        },
        {
            "name": "Marcin Kurczewski",
            "homepage": "http://sakuya.pl",
            "role": "Developer"
        },
        {
            "name": "Benoit Pesty",
            "homepage": "https://github.com/tchule",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-iconv": "*",
        "ext-tokenizer": "*",
        "nikic/php-parser": "~1.0.0",
        "symfony/yaml": "~2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2.0",
        "squizlabs/php_codesniffer": "~1.5.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "support": {
        "wiki": "https://github.com/hippophp/hippo/wiki",
        "source": "https://github.com/hippophp/hippo"
    },
    "autoload": {
        "psr-0": {
            "Hippo\\": "src/",
            "Hippo\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
