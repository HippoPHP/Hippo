{
    "name": "hippophp/hippo",
    "version": "0.1.0",
    "description": "Hippo is an open-source tool that helps PHP programmers adhere to certain coding conventions",
    "type": "library",
    "keywords": ["checkstyle","standard","convention", "coding standards", "validator"],
    "homepage": "https://github.com/HippoPHP/Hippo",
    "license": "MIT",
    "authors": [
        {
            "name": "James Brooks",
            "email": "jbrooksuk@me.com",
            "homepage": "https://james-brooks.uk",
            "role": "Developer"
        },
        {
            "name": "Marcin Kurczewski",
            "homepage": "http://sakuya.pl",
            "role": "Developer"
        }
    ],
    "support": {
        "wiki": "https://github.com/hippophp/hippo/wiki",
        "source": "https://github.com/hippophp/hippo"
    },
    "require": {
        "php": ">=5.4.0",
        "hippophp/tokenizer": "~1.0@dev",
        "nikic/php-parser": "~1.1",
        "symfony/yaml": "~2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "squizlabs/php_codesniffer": "~2.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "HippoPHP\\Hippo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HippoPHP\\Hippo\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/hippo"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
